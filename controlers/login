const express = require("express");
const router = express.Router();
const bcrypt = require("bcrypt");
require("dotenv").config();
const app = express();
const db = require("../config/database");
const jwt = require("jsonwebtoken");
const { body, validationResult } = require("express-validator");
app.use(express.json());
function generateAccessToken(username) {
  return jwt.sign(username, process.env.JWTPASS, {
    expiresIn: "1800s",
  });
}

router.post(
  "/",
  [
    body("LoginMai").isEmail().withMessage("Please write corect Mail"),
    body("LoginPassword")
      .isLength({ min: 1 })
      .withMessage("Password can not be null")
      .blacklist("Password"),
  ],
  async (req, red) => {
    const errors = validationResult(req);
    if (!errors.isEmpty()) {
      //return erors
      return red.status(400).json({ errors: errors.array() });
    }
    const checkemail = req.body.LoginMai;
    const checkpass = req.body.LoginPassword;
    users = await User.query();
    red.send(users);
    console.log(checkemail, checkpass);
    var personalia = "null";
    var email = "null";
    if (checkemail.length < 1 || checkpass.length < 1) {
      red.status(401).json({ error: "Unauthorized" });
    } else {
      db.query(
        "SELECT users.id, users.email, users.password, users.username, personalinfo.id, personalinfo.userId, personalinfo.street, personalinfo.postCode, personalinfo.city, personalinfo.houseNumber, personalinfo.phoneNumber FROM users LEFT JOIN personalinfo ON users.id = personalinfo.userId WHERE users.email = ?",
        checkemail,
        (err, rows) => {
          if (err) {
            throw err;
            red.send({ dbstatus: "error", response: err });
          }
          console.log(rows[0]);
          if (rows.length) {
            const passfromdb = rows[0]?.password;

            //uystaiwanie cokiesu√≥w

            if (bcrypt.compareSync(checkpass, passfromdb)) {
              // ustawianie cookies
              id = rows[0]?.id;
              email = rows[0]?.email;
              personalia = rows[0]?.username;
              streets = rows[0]?.street;
              postCodes = rows[0]?.postCode;
              //
              citys = rows[0]?.city;
              const tokenseted = generateAccessToken({
                id: id,
                email: email,
                personInfo: personalia,
                street: streets,
                postCode: postCodes,
                city: citys,
              });
              req.session.views = tokenseted;
              red.send({ dbstatus: "User Logged", response: tokenseted });
            } else {
              red.send({ dbstatus: "not login", response: 0 });
            }
          } else {
            red.send({ dbstatus: "Please write corect Mail", response: 0 });
          }
        }
      );
    }
  }
);
module.exports = router;
